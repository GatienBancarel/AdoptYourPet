<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FindYourPet" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightBlue_200</item>
        <item name="colorPrimaryDark">@color/lightBlue_200</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor">@color/lightBlue_700</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FindYourPet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FindYourPet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FindYourPet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>